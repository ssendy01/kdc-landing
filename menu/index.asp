window.addEventListener('click', function(event) {
    if (event.target == modal) {
        modal.style.display = 'none';
        document.getElementById('modalFrame').src = '';  // 모달 닫을 때 iframe 콘텐츠 초기화

		//배경 스크롤바 보이기
		document.body.style.overflow = 'auto';
    }
});
</script>




