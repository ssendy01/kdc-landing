    </div>
</div>

<script>
// 모달 관련 변수
const modal = document.getElementById('myModal');
const closeBtn = document.querySelector('.modal .close');
const openBtns = document.querySelectorAll('.openModal');

// 모달 열기
openBtns.forEach(button => {
    button.addEventListener('click', function() {
        // licId 혹은 packNo 데이터를 추출
        const licId = this.getAttribute('data-lic');
        const packId = this.getAttribute('data-pack');
        const dlname = this.querySelector('.dlname') ? this.querySelector('.dlname').textContent : '국비수강신청';

        // licId가 있는 경우와 packId가 있는 경우를 분기 처리
        if (licId) {
            document.getElementById('modalTitle').textContent = dlname; // 모달 제목을 업데이트
            document.getElementById('modalFrame').src = `/m/main/DigitalLic/?licNo=${licId}`;
        } else if (packId) {
            document.getElementById('modalTitle').textContent = dlname;
            document.getElementById('modalFrame').src = `/m/main/DigitalPack/?PackNo=${packId}`;
        }


		//배경 스크롤바 숨기기
		document.body.style.overflow = 'hidden';

        
        // 모달 열기
        modal.style.display = 'block';
    });
});

// 모달 닫기
closeBtn.addEventListener('click', function() {
    modal.style.display = 'none';
    document.getElementById('modalFrame').src = '';  // 모달 닫을 때 iframe 콘텐츠 초기화

	//배경 스크롤바 보이기
	document.body.style.overflow = 'auto';
});

